mixin system-form
    div(class="modal" id="addModal")
        div(class='modal-background')
        div(class='modal-content')
            form(action="/system", method="post" class="modal-content")
                span(class="close")
                    X
                input#system-name(type="name", name="system-name" p)
                if err
                    p Error: #{err}
                button(type="submit") Submit
        button(class="modal-close is-large" aria-label='close')


mixin wolfram-widget(src, content)
    div(class="card" id="wolframWidget")
        div(class="card-image")
            figure(class="image is-4by3")
                img( src=src alt="wolfram result")
        div(class="card-content")
            div(class="content")
                p= content    